{
  "name": "Weather Widget",
  "id": "weather-widget",
  "version": "1.2.0",
  "description": "A beautiful weather widget that displays current weather conditions and temperature in the bar",
  "author": "Ly-sectest",
  "license": "MIT",
  "noctaliaVersion": ">=1.0.0",
  "type": "bar-widget",
  "official": false,
  "settings": {
    "schema": {
      "enabled": {
        "type": "boolean",
        "default": true,
        "label": "Enable Weather Widget",
        "description": "Show the weather widget in the bar"
      },
      "location": {
        "type": "string",
        "default": "London",
        "label": "Location",
        "description": "City name for weather data"
      },
      "units": {
        "type": "string",
        "default": "metric",
        "label": "Temperature Units",
        "description": "Temperature unit system",
        "options": [
          {"value": "metric", "label": "Celsius"},
          {"value": "imperial", "label": "Fahrenheit"}
        ]
      },
      "updateInterval": {
        "type": "number",
        "default": 30,
        "min": 5,
        "max": 120,
        "label": "Update Interval (minutes)",
        "description": "How often to update weather data"
      },
      "showIcon": {
        "type": "boolean",
        "default": true,
        "label": "Show Weather Icon",
        "description": "Display weather condition icon"
      },
      "backgroundColor": {
        "type": "color",
        "default": "#2196F3",
        "label": "Background Color",
        "description": "Widget background color"
      }
    }
  }
}
